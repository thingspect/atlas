{
  "swagger": "2.0",
  "info": {
    "title": "Atlas",
    "version": "1.0",
    "contact": {
      "name": "Thingspect",
      "url": "https://www.thingspect.com/",
      "email": "info@thingspect.com"
    }
  },
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/v1/devices": {
      "get": {
        "summary": "List all devices.",
        "operationId": "DeviceService_List",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/apiListDeviceResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "limit",
            "description": "Number of devices to return.",
            "in": "query",
            "required": false,
            "type": "integer",
            "format": "int32"
          },
          {
            "name": "offset",
            "description": "Offset to start the results.",
            "in": "query",
            "required": false,
            "type": "integer",
            "format": "int32"
          },
          {
            "name": "orgID",
            "description": "Organization ID (UUID). Temporary pending authentication.",
            "in": "query",
            "required": false,
            "type": "string"
          }
        ],
        "tags": [
          "DeviceService"
        ]
      },
      "post": {
        "summary": "Create a device.",
        "operationId": "DeviceService_Create",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/apiCreateDeviceResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/apiCreateDeviceRequest"
            }
          }
        ],
        "tags": [
          "DeviceService"
        ]
      }
    },
    "/v1/devices/{device.id}": {
      "put": {
        "summary": "Update a device.",
        "operationId": "DeviceService_Update",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/apiUpdateDeviceResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "device.id",
            "description": "Device ID (UUID).",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/apiUpdateDeviceRequest"
            }
          }
        ],
        "tags": [
          "DeviceService"
        ]
      }
    },
    "/v1/devices/{id}": {
      "get": {
        "summary": "Read a device by ID.",
        "operationId": "DeviceService_Read",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/apiReadDeviceResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "id",
            "description": "Device ID (UUID) to read.",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "orgID",
            "description": "Organization ID (UUID). Temporary pending authentication.",
            "in": "query",
            "required": false,
            "type": "string"
          }
        ],
        "tags": [
          "DeviceService"
        ]
      },
      "delete": {
        "summary": "Delete a device by ID.",
        "operationId": "DeviceService_Delete",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "properties": {}
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "id",
            "description": "Device ID (UUID) to delete.",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "orgID",
            "description": "Organization ID (UUID). Temporary pending authentication.",
            "in": "query",
            "required": false,
            "type": "string"
          }
        ],
        "tags": [
          "DeviceService"
        ]
      }
    },
    "/v1/sessions/login": {
      "post": {
        "summary": "Log in a user.",
        "operationId": "SessionService_Login",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/apiLoginResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/apiLoginRequest"
            }
          }
        ],
        "tags": [
          "SessionService"
        ],
        "security": []
      }
    }
  },
  "definitions": {
    "apiCreateDeviceRequest": {
      "type": "object",
      "properties": {
        "device": {
          "$ref": "#/definitions/apiDevice",
          "description": "Device message to create."
        }
      },
      "description": "CreateDeviceRequest is sent to create a device."
    },
    "apiCreateDeviceResponse": {
      "type": "object",
      "properties": {
        "device": {
          "$ref": "#/definitions/apiDevice",
          "description": "Created device message."
        }
      },
      "description": "CreateDeviceResponse is sent in response to a device creation."
    },
    "apiDevice": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Device ID (UUID)."
        },
        "orgID": {
          "type": "string",
          "description": "Organization ID (UUID)."
        },
        "uniqID": {
          "type": "string",
          "description": "Device unique ID."
        },
        "isDisabled": {
          "type": "boolean",
          "description": "Set to true to disable the device."
        },
        "token": {
          "type": "string",
          "description": "Authentication token (UUID)."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Device creation timestamp."
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Device modification timestamp."
        }
      },
      "description": "Device represents a device as stored in the database."
    },
    "apiListDeviceResponse": {
      "type": "object",
      "properties": {
        "total": {
          "type": "integer",
          "format": "int32",
          "description": "Total number of devices."
        },
        "devices": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/apiDevice"
          },
          "description": "Device array."
        }
      }
    },
    "apiLoginRequest": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "description": "Email of the user to log in."
        },
        "orgName": {
          "type": "string",
          "description": "Organization name of the user to log in."
        },
        "password": {
          "type": "string",
          "description": "Password of the user to log in."
        }
      },
      "description": "LoginRequest is sent to log in a user."
    },
    "apiLoginResponse": {
      "type": "object",
      "properties": {
        "token": {
          "type": "string",
          "description": "Token to be used for subsequent non-login service calls."
        },
        "expiresAt": {
          "type": "string",
          "format": "date-time",
          "description": "Token expiration timestamp."
        }
      },
      "description": "LoginResponse is sent in response to a user login."
    },
    "apiReadDeviceResponse": {
      "type": "object",
      "properties": {
        "device": {
          "$ref": "#/definitions/apiDevice",
          "description": "Read device message."
        }
      },
      "description": "ReadDeviceResponse is sent in response to a device read."
    },
    "apiUpdateDeviceRequest": {
      "type": "object",
      "properties": {
        "device": {
          "$ref": "#/definitions/apiDevice",
          "description": "Device message to update."
        }
      },
      "description": "UpdateDeviceRequest is sent to update a device."
    },
    "apiUpdateDeviceResponse": {
      "type": "object",
      "properties": {
        "device": {
          "$ref": "#/definitions/apiDevice",
          "description": "Updated device message."
        }
      },
      "description": "UpdateDeviceResponse is sent in response to a device update."
    },
    "protobufAny": {
      "type": "object",
      "properties": {
        "typeUrl": {
          "type": "string"
        },
        "value": {
          "type": "string",
          "format": "byte"
        }
      }
    },
    "rpcStatus": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "details": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/protobufAny"
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "TokenAuth": {
      "type": "apiKey",
      "description": "Enter your token (/v1/sessions/login) in the format **Bearer \u0026lt;token\u0026gt;**",
      "name": "Authorization",
      "in": "header"
    }
  },
  "security": [
    {
      "TokenAuth": []
    }
  ]
}
